unit = 8px

size(font, line)
  font-size font px
  line-height line px

.text-s
  size 12, unit * 3
.text-m
  size 28, unit * 4
.text-l
  size 32, unit * 4
.text-xl
  size unit * 5, unit * 5

.tight
  letter-spacing: -1px
.loose
  letter-spacing: 0.3px

html
  @extend .text-m
  font-family 'Questrial', sans-serif
