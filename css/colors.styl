all_colors = {
  white: #fff,
  purple: #A62377,
  teal: #0FC6C0,
  blue: #4D7F99,
  green: #A6C104,
  orange: #CC7252,
  gray: #5F5F5F,
  black: #333,
  trans: rgba(255,255,255,0)
}

for name, color in all_colors
  .{name}
    color color
  .{name}-border
    border 1px solid color
  .{name}-bg
    background color

html
  @extend .black
a
  @extend .purple