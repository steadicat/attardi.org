---
import '@fontsource/space-mono/400.css';
import '@fontsource/rubik/300.css';
import '@fontsource/rubik/500.css';
import '@fontsource/fraunces/300.css';
import '@fontsource/fraunces/300-italic.css';
import '@fontsource/fraunces/500.css';

export interface Props {
  title: string;
  description: string;
  image?: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const {title, description, image = ''} = Astro.props;
---

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/svg+xml" href="/images/icon.png" />
<meta name="generator" content={Astro.generator} />
<link rel="alternate" type="application/rss+xml" title="RSS Feed" href="/rss.xml" />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={new URL(image, Astro.url)} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={new URL(image, Astro.url)} />

<style is:global>
  h1,
  h2,
  h3,
  h4,
  h5,
  h6,
  html,
  body {
    margin: 0;
    padding: 0;
  }

  :root {
    --sans: Rubik, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    --serif: Fraunces, 'Lucida Bright', serif;
    --mono: 'Space Mono', 'SF Mono', Consolas, Monaco, monospace;

    --unit: 18px;

    --maxColumn: calc(var(--unit) * 36);
    --mobileMargin: var(--unit);
    --sidebarWidth: calc(var(--unit) * 14);

    --textColor: #2d2d2d;
    --accentColor: #ffcc00;

    --linkColor: rgb(148, 111, 177);
    --hoverLinkColor: #6cf;
    --activeLinkColor: var(--accentColor);

    --gray: #aaa;
    --grayDisabled: #ddd;
    --darkerGrayBackground: #f0f0f0;
    --grayBackground: #f7f7f7;

    --white: #fff;

    --hoverBackground: rgba(0, 0, 0, 0.05);

    --gradient1: hsl(278, 25%, 92%);
    --gradient2: hsl(195, 40%, 92%);
    --gradient3: hsl(48, 100%, 92%);
  }

  @media (prefers-color-scheme: dark) {
    :root {
      --textColor: #e2e2e2;
      --accentColor: #ffcc00;

      --linkColor: rgb(55, 165, 208);
      --hoverLinkColor: rgb(44, 185, 255);
      --activeLinkColor: var(--accentColor);

      --gray: #969696;
      --grayDisabled: #f7f7f7;
      --darkerGrayBackground: #515151;
      --grayBackground: #363636;

      --white: #212121;

      --hoverBackground: rgba(255, 255, 255, 0.05);

      --gradient1: hsl(278, 25%, 14%);
      --gradient2: hsl(195, 40%, 17%);
      --gradient3: hsl(48, 25%, 16%);
    }
  }

  html {
    background: var(--white);
    color: var(--textColor);
  }

  body {
    min-height: 100vh;
    background: radial-gradient(circle at 0% 0%, var(--gradient2) 0%, transparent 35%),
      radial-gradient(circle at 100% 0%, var(--gradient3) 0%, transparent 35%),
      radial-gradient(circle at 100% 100%, var(--gradient2) 0%, transparent 35%),
      radial-gradient(circle at 50% 50%, var(--white) 0%, var(--gradient1) 100%);
    background-attachment: fixed;
  }

  main {
    max-width: 648px;
    padding: 18px;
    margin: 0 auto;
    padding-bottom: 72px;
  }

  .serifRegular {
    font-family: var(--serif);
    font-weight: 300;
  }
  .serifBold {
    font-family: var(--serif);
    font-weight: 500;
  }
  .sansRegular {
    font-family: var(--sans);
    font-weight: 300;
  }
  .sansBold {
    font-family: var(--sans);
    font-weight: 500;
  }

  .sansCaps {
    /* sansMedium */
    font-size: 78%;
    letter-spacing: 1px;
    padding-left: 1px;
    padding-right: 1px;
    line-height: 1;
  }
  .sansBoldCaps {
    /* sansExtraBold */
    font-size: 78%;
    letter-spacing: 1px;
    padding-left: 1px;
    padding-right: 1px;
    line-height: 1;
  }
  .serifCaps {
    /* serifBold */
    font-size: 76%;
    letter-spacing: 1px;
    padding-left: 1px;
    padding-right: 1px;
    line-height: 1;
  }

  .xl {
    font-size: 42px;
    line-height: calc(var(--unit) * 2.5);
  }
  .l {
    font-size: 28px;
    line-height: calc(var(--unit) * 2);
  }
  .m {
    font-size: 22px;
    line-height: calc(var(--unit) * 1.5);
  }
  .s {
    font-size: 17px;
    line-height: calc(var(--unit) * 1.5);
  }
  .xs {
    font-size: 12px;
    line-height: var(--unit);
  }
</style>
